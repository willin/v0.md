---
import { SITE_DESCRIPTION, SITE_TITLE, defaultLocale } from '@/consts';
import { getRelativeUrlWithoutLocale, i18n } from '@/i18n';
import BaseLayout from '@/layout/BaseLayout.astro';
import { CollectionType, getLocaleCollection } from '@/lib/collection';
import { getSeo } from '@/lib/seo';
import { SEO } from 'astro-seo';

export async function getStaticPaths() {
  const posts = await getLocaleCollection(
    defaultLocale,
    CollectionType.Posts,
    ''
  );
  return posts.map((post) => {
    return {
      params: {
        lang: defaultLocale,
        slug: getRelativeUrlWithoutLocale(post.slug)
      },
      props: { entry: post }
    };
  });
}

const { entry } = Astro.props;

const { Content } = await entry.render();

const t = i18n(Astro.url);
const seoConfig = getSeo({
  title: entry.data.title,
  description: entry.data.description || SITE_DESCRIPTION
});
---

<BaseLayout>
  <SEO {...seoConfig} titleTemplate={`%s - ${SITE_TITLE}`} canonical={new URL(Astro.url.pathname, Astro.site)} slot="seo" />
  <main>
    <h1>
      🧑‍🚀 {t('title')}
    </h1>
    <article class="prose">
      <Content />
    </article>
  </main>
</BaseLayout>
