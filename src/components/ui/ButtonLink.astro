---
import LocaleLink from './LocaleLink.astro';

interface Props {
  badge?: string;
  url?: string;
  label?: string;
}
const { badge, url = '', label } = Astro.props;
---

<LocaleLink href={url} aria-label={label}>
  <button
      class:list={`"
      w-full
      h-10
      rounded-lg
      bg-none
      hover:bg-[var(--bg-page)]
      active:bg-[var(--bg-page)]
      transition-all
      pl-2
      hover:pl-3
      text-content-primary
      hover:text-primary
      `}>
      <div class="flex items-center justify-between relative mr-2">
          <div class="overflow-hidden text-left whitespace-nowrap overflow-ellipsis">
              <slot></slot>
          </div>
          { badge !== undefined && badge !== null && badge !== '' &&
            <div class="badge transition h-7 ml-4 min-w-[2rem] rounded-lg text-sm font-bold bg-primary flex items-center justify-center">
                { badge }
            </div>
          }
      </div>
  </button>
</LocaleLink>
